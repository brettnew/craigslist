{{#if addNewListing}}
<div class="container">
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input class="form-control" value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="detail">Details</label>
      {{textarea class="form-control" value=detail id="detail"}}
    </div>

    <div class="form-group">
      <label for="username">User Name</label>
      {{input class="form-control" value=username id="username"}}
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      {{#power-select
        selected=category
        options=categories
        onchange=(action (mut category))
        as |item|
      }}
        {{item.name}}
      {{/power-select}}
    </div>

    <div class="form-group">
      <label for="image">Picture</label>
      {{input class="form-control" value=image id="image"}}
    </div>

    <button class="btn btn-success btn-lg" {{action 'save1'}}>Save</button>

  </form>
</div>
{{else}}
  <button class="btn btn-primary btn-lg"{{action 'listingFormShow'}}>New Listing</button>
{{/if}}
