{{#if addNewListing}}
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="detail">Details</label>
      {{input value=detail id="detail"}}
    </div>

    <div class="form-group">
      <label for="username">User Name</label>
      {{input value=username id="username"}}
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      {{#power-select
        selected=category
        options=categories
        onchange=(action (mut category))
        as |item|
      }}
        {{item.name}}
      {{/power-select}}
    </div>

    <button {{action 'save1'}}>Save</button>

  </form>
</div>
{{else}}
  <button {{action 'listingFormShow'}}>New</button>
{{/if}}
