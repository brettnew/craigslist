{{#if editListing}}
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input class="form-control" value=title id="title" placeholder=listing.title}}
      </div>

      <div class="form-group">
        <label for="detail">Details</label>
        {{textarea class="form-control" value=detail id="detail" placeholder=listing.detail}}
      </div>

      <div class="form-group">
        <label for="username">User Name</label>
        {{input class="form-control" value=username id="username" placeholder=listing.username}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{#power-select
          selected=category
          options=categories
          onchange=(action (mut category))
          as |item|
        }}
          {{item.name}}
        {{/power-select}}
      </div>

      <div class="form-group">
        <label for="image">Picture</label>
        {{input class="form-control" value=image id="image"}}
      </div>

      <button class="btn btn-primary btn-sm"{{action 'edit' listing}}>Save</button>

    </form>
  </div>
{{else}}
<button class = "btn btn-warning btn-sm" {{action 'editListingShow'}}>Update</button>
{{/if}}
